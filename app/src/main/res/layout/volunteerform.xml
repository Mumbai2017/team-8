<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_marginBottom="4dp">
            <TextView
                android:text="Name :"
                android:textSize="20dp"
                android:layout_column="0" />
            <TextView
                android:id="@+id/name"
                android:layout_weight="0.1"
                android:textSize="20dp"
                android:hint=""
                android:layout_column="1"
                />
        </TableRow>
        <TableRow
            android:layout_marginBottom="4dp">
            <TextView
                android:text="Child Name :"
                android:textSize="20dp"
                android:layout_column="0" />
            <TextView
                android:id="@+id/dob"
                android:layout_weight="0.1"
                android:textSize="20dp"
                android:hint=""
                android:layout_column="1"
                />
        </TableRow>
        <TableRow android:layout_marginBottom="4dp">
            <TextView
                android:text="Medical Condition :"
                android:textSize="20dp"
                android:layout_column="0" />
            <TextView
                android:id="@+id/medical_condition"
                android:layout_weight="0.1"
                android:textSize="20dp"
                android:hint=""
                android:layout_column="1"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Wish 1"
                android:textSize="20dp"
                android:layout_column="0"/>
            <EditText
                android:id="@+id/wish1"
                android:inputType="textMultiLine"
                android:lines="1"
                android:maxLines="5"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:scrollbars="vertical"
                android:layout_column="1"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Wish 2"
                android:textSize="20dp"
                android:layout_column="0"/>
            <EditText
                android:id="@+id/wish2"
                android:inputType="textMultiLine"
                android:lines="1"
                android:maxLines="5"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:scrollbars="vertical"
                android:layout_column="1"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Wish 3"
                android:textSize="20dp"
                android:layout_column="0"/>
            <EditText
                android:id="@+id/wish3"
                android:inputType="textMultiLine"
                android:lines="1"
                android:maxLines="5"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:scrollbars="vertical"
                android:layout_column="1"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Rush Case : "
                android:textSize="20dp"
                android:layout_column="0"/>
            <RadioGroup
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rbutton_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"/>
                <RadioButton
                    android:id="@+id/rbutton_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"/>
            </RadioGroup>
        </TableRow>
    </TableLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="SUBMIT"
        android:textSize="20dp"
        android:padding="20dp"
        android:id="@+id/submit_button"
        />
</LinearLayout>