<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ImageView
            android:id="@+id/doctor_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/doctorId_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/doctor_image"
            android:text="Doctor Id:"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/doctorId_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/doctorId_label"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/doctorName_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/doctorId_tv"
            android:text="Doctor Name:"
            android:layout_below="@id/doctorId_label"
            android:textSize="20dp"


            />

        <TextView
            android:id="@+id/doctorName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/doctorName_label"
            android:textSize="20dp"

            />


        <TextView
            android:id="@+id/doctorEmail_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/doctorId_tv"
            android:text="Doctor Email:"
            android:layout_below="@id/doctorName_label"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/doctorEmail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/doctorEmail_label"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/doctorId_tv"
            android:text="Hospital:"
            android:layout_below="@id/doctorName_label"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/hospital_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/doctorEmail_label"
            android:textSize="20dp"

            />




</LinearLayout>